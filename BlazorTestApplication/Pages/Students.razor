@page "/students"

@using BlazorTestApplication.Data.Model
@using BlazorTestApplication.Data
@inject OtusService OtusService

<h1>Students</h1>

@if (students == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Number</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Middle Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in students)
            {
                <tr>
                    <td>@student.Student_Id</td>
                    <td>@student.LastName</td>
                    <td>@student.FirstName</td>
                    <td>@student.MiddleName</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Student> students;

    protected override async Task OnInitializedAsync()
    {
        students = await OtusService.GetStudentsAsync();
    }
}
